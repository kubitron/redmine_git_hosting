<% if not @is_xhr %>
  <h2><%=l(:label_deployment_credential_create)%></h2>
<% end %>

<% labelled_remote_form_for :repository_deployment_credentials, @cred,
                            :url  => { :controller => 'repository_deployment_credentials', :action => 'create_with_key', :project_id => @project, :id => @cred.id },
                            :html => { :method => :post, :class => 'tabular', :remote => true } do |f| %>

  <%= render :partial => 'form', :locals => { :f => f } %>

  <%= submit_tag l(:button_save), :disable_with => l(:label_backup_in_progress) %>

  <% if not @is_xhr %>
    <%= link_to l(:button_cancel), url_for(:controller => 'repositories', :action => 'edit', :id => @repository.id) %>
  <% end %>
<% end %>
